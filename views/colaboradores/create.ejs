<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastro de colaboradores (INE5646)</title>
  <link href='https://fonts.googleapis.com/css?family=Roboto:200,300|Material+Icons' rel="stylesheet" type="text/css">
  <link href="/stylesheets/vuetify.css" rel="stylesheet" type="text/css"></link>
  <link href="/stylesheets/styles.css" rel="stylesheet" type="text/css">
  
</head>

<body>
  <div id="app">
    <v-app>
      <v-toolbar :fixed="fixed" app>
        <v-spacer></v-spacer>
        <v-toolbar-title v-text="title"></v-toolbar-title>
        <v-spacer></v-spacer>
        </v-toolbar>
      <main>
        <v-content>
          <div>
            <v-alert v-model="alert" type="error" dismissible class="message">
              <b>Por favor, corrija os seguintes erros</b>
                <ul>
                  <li v-for="error in errors">{{ error }}</li>
                </ul>
            </v-alert>
          </div>
          <v-container grid-list-md>
            <form id="app" action="/colaboradores/save" method="post" @submit="checkForm">
              <v-text-field
              v-model="cpf"
              name="cpf"
              :rules="[rules.required]"
              label="CPF"
              id="cpf"
            ></v-text-field>
          <v-text-field
              v-model="nome"
              name="nome"
              :rules="[rules.required]"
              label="Nome completo"
            ></v-text-field>
          <v-text-field v-model="email" :rules="[rules.required, rules.email]" label="E-mail" name="email"></v-text-field>
          <v-text-field label="Setor" v-model="setor" :rules="[rules.required]" name="setor"></v-text-field>
          <v-text-field v-model="funcao" :rules="[rules.required]" label="Função" name="funcao"></v-text-field>
          <input type="date" name="dataInicio" class="text-field" v-model="dataInicio">
        <v-checkbox label="Celular corporativo" v-model="celularCorporativo" name="celularCorporativo"></v-checkbox>
          <center><v-btn color="primary" type="submit" value="Submit" class="mb-2" @click.native="checkForm">Salvar</v-btn></center>
          <p>
    <input type="submit" value="Submit" @click="checkForm" >  
  </p>
    <v-btn @click="clear">clear</v-btn>
  </form>
          </v-container>
        </v-content>
        <center><h3><a href="/colaboradores">Voltar para a lista de colaboradores</a></h3>
      </main>
      <!--<v-footer :fixed="fixed" app>
        <v-spacer></v-spacer><span>&copy; 2017</span>
      </v-footer>-->
    </v-app>
  </div>
  <script src="https://unpkg.com/vue/dist/vue.js"></script>
  <script src="https://unpkg.com/vuetify/dist/vuetify.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="/js/main.js"></script>
  <script type="text/javascript" src="/js/jquery.mask.js"></script>
  <script>
    Vue.component('page', {
      template: '#page'
    })
    new Vue({
      el: '#app',
      data: {
        fixed: false,
        cpf: '',
        alert: false,
        nome: '',
        email: '',
        dataInicio: '',
        celularCorporativo: false,
        menu2: false,
        title: 'Cadastro de colaboradores (INE5646)',
        setores: [
          'Administrativo',
          'Almoxarifado',
          'Comercial',
          'ComEx',
          'Compras',
          'Consultoria',
          'Controladoria',
          'Design',
          'DP',
          'Expedição',
          'Faturamento',
          'Financeiro',
          'Logística',
          'Manutenção',
          'Marketing',
          'Mecânica',
          'Obras',
          'P&D',
          'PCP',
          'Produção',
          'Projetos',
          'Qualidade',
          'RH',
          'TI',
          'Vendas'
        ],
        rules: {
          required: (value) => !!value || 'Campo obrigatório.',
          email: (value) => {
            const pattern = /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
            return pattern.test(value) || 'E-mail inválido.'
          }
        },
      },
      methods:{
        checkForm:function(e) {
          this.errors = [];
          if(!this.cpf) { this.errors.push("O campo CPF é obrigatório."); this.alert = true;}
          if(!this.nome) {this.errors.push("O campo Nome é obrigatório."); this.alert = true;}
          if(!this.setor) {this.errors.push("O campo Setor é obrigatório."); this.alert = true;}
          if(!this.funcao) {this.errors.push("O campo Função é obrigatório."); this.alert = true;}
          if(!this.dataInicio) {this.errors.push("O campo Data de Início é obrigatório."); this.alert = true;}
          if(!this.email) {this.errors.push("O campo e-mail é obrigatório"); this.alert = true;} 
            else if(!this.validEmail(this.email)) { this.errors.push("Inserir e-mail válido."); this.alert = true;}
          
          if(!this.errors.length) return true;
          e.preventDefault();
        },
        validEmail:function(email) {
          var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        return re.test(email);
      }, clear () {
        this.$refs.form.reset()
        for (var error in errors) {
          this.error[i].pop
        }
      }
      /*, submit () {
      if (this.$refs.form.validate()) {
        // Native form submission is not yet supported
        axios.post('/api/submit', {
          cpf: this.cpf,
          nome: this.nome,
          email: this.email,
          setor: this.setor,
          funcao: this.funcao,
          dataInicio: this.dataInicio
        })
      }
    }*/
    }
    })
  </script>
</body>

</html>


